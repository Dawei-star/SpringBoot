spring:
  datasource:
    url: jdbc:mysql://localhost:3306/big_event
    driver-class-name: com.mysql.cj.jdbc.Driver
    username: ${DB_USERNAME:root}
    password: ${DB_PASSWORD:your_database_password}
  data:
    redis:
      host: ${REDIS_HOST:localhost}
      port: ${REDIS_PORT:6379}
mybatis:
  configuration:
    map-underscore-to-camel-case: true
server:
  port: 8081
logging:
  level:
    com.itheima.bigevent.interceptor.LoginInterceptor: DEBUG
    com.itheima.bigevent.controller.UserController: DEBUG
    org.springframework.data.redis: DEBUG
# JWT配置 - 生产环境必须使用环境变量设置强密钥
# 生成方式：openssl rand -base64 32
jwt:
  secret: ${JWT_SECRET:请设置JWT_SECRET环境变量或在此配置至少32位的强密钥}

